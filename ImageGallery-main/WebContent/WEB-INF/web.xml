<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
  <display-name>ImageGallery</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://127.0.0.1:3306/gallery?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>adminadmin</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>  
  <filter> 
      <filter-name>LoginChecker</filter-name>
      <filter-class>it.polimi.tiw.gallery.filters.LoginChecker</filter-class> 
 </filter> 
 <filter-mapping> 
    <filter-name>LoginChecker</filter-name> 
    <url-pattern>/GoToHome</url-pattern>
    <url-pattern>/GoToAlbum</url-pattern>  
    <url-pattern>/CreateNewAlbum</url-pattern> 
    <url-pattern>/UploadNewImage</url-pattern> 
    <url-pattern>/AddImageToAlbum</url-pattern> 
    <url-pattern>/RemoveAlbum</url-pattern> 
    <url-pattern>/AddComment</url-pattern> 
    <url-pattern>/Logout</url-pattern> 
 </filter-mapping> 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>